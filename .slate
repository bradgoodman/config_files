# Brad's Slate Config
config defaultToCurrentScreen true
config resizePercentOf screenSize

# Half Left Screen
bind right:ctrl;alt;cmd  push right bar-resize:screenSizeX/2
# Half Right Screen
bind left:ctrl;alt;cmd   push left  bar-resize:screenSizeX/2
# Half Top Screen
bind up:ctrl;alt;cmd     push up    bar-resize:screenSizeY/2
# Half Bottom Screen
bind down:ctrl;alt;cmd   push down  bar-resize:screenSizeY/2
# Full Screen
bind space:ctrl;alt;cmd move screenOriginX;screenOriginY screenSizeX;screenSizeY

# Move to Left Monitor
bind right:ctrl;cmd throw right resize
# Move to Right Monitor
bind left:ctrl;cmd  throw left  resize

# Top Left Screen
bind left:ctrl;shift corner top-left resize:screenSizeX/2;screenSizeY/2
# Top Right Screen
bind right:ctrl;shift corner top-right resize:screenSizeX/2;screenSizeY/2
# Bottom Left Screen
bind left:ctrl;alt;shift corner bottom-left resize:screenSizeX/2;screenSizeY/2
# Bottom Right Screen
bind right:ctrl;alt;shift corner bottom-right resize:screenSizeX/2;screenSizeY/2

# Window Hints
bind esc:cmd hint
